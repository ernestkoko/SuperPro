<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="resendVerificationViewModel"
            type="com.ernestkoko.superpro.ResendVerificationDialogViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ResendVerificationDialog">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Verification Email"

            android:textSize="21sp" />

        <EditText
            android:id="@+id/confirm_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:text="@={resendVerificationViewModel.email}"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@={resendVerificationViewModel.password}"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialogCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialogConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:onClick="@{() -> resendVerificationViewModel.authenticateAndResendEmail()}"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Confirm"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>
</layout>