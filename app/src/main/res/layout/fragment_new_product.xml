<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="newProductVieModel"
            type="com.ernestkoko.superpro.screens.newproducts.NewProductViewModel" />

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.newproducts.NewProductFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_24dp">
        <EditText
            android:id="@+id/product_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/product_name" />
        <EditText
            android:id="@+id/product_quantity_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number|numberDecimal"
            android:hint="@string/quantity" />
        <EditText
            android:id="@+id/product_expiry_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Expiry Date" />
        <EditText
            android:id="@+id/product_manufacturer_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Manufacturer" />
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> newProductVieModel.onInsert()}"
            android:text="Add"/>

    </LinearLayout>




</ScrollView>
</layout>