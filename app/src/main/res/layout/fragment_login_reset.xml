<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.login.login_reset.LoginResetFragment">

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/EditTextLayoutStyle">
        <com.google.android.material.textfield.TextInputEditText
            style="@style/text_input_edit"
            android:hint="@string/email"
            android:contentDescription="@string/enter_your_registered_email_to_reset_password"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/password_reset_button"
            style="@style/ButtonStyle"
            android:contentDescription="@string/password_reset_button"
            android:text="@string/reset"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>